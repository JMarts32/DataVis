{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://gist.githubusercontent.com/JMarts32/b6d71d8035237df5f65302d4d2be1c84/raw/ad5a489007c0a1e37a79c96adf21279ea4700d22/movies.json"
    },
    "height": 100,
    "width": 200,
    "params": [
        {
          "name": "genreFilter",
          "value": null,
          "bind": {
            "input": "select",
            "options": ["Drama", "Musical", "Comedy", "Action", "Romantic Comedy", "Western", "Adventure", "Thriller/Suspense", "Documentary", "Black Comedy", "Horror", "Concert/Performance"],
            "name": "Select a Genre"
          }
        }
      ],
    "transform": [
    {
        "filter": {
        "field": "Major Genre",
        "equal": {"expr": "genreFilter"}
        }
    },
    {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Rotten Tomatoes Rating", "order": "descending"}]
    },
    {
        "filter": {"field": "rank", "lte": 10}
    }
    ],
    "encoding": {
        "x": {
            "field": "worldwide_gross",
            "type": "quantitative",
            "axis": {"title": "Income"}
        },
        "y": {
            "field": "Title",
            "type": "nominal",
            "axis": {"title": "Movies"}
        }
    },
    "layer": [
        {
          "mark": "line",
          "encoding": {
            "detail": {
              "field": "Title",
              "type": "nominal"
            },
            "color": {"value": "#db646f"}
          }
        },
        {
          "mark": {
            "type": "point",
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "Production budget",
              "type": "quantitative",
              "title": "Production Budget"
            },
            "opacity": {"value": 1}
          }
        }
    ]
  }